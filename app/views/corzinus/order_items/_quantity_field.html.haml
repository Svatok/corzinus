- if local_assigns[:field].present?

  .input-group.align-center.quantity-field
    %div.input-link.quantity-minus -
    .hidden-errors
      = field.input :quantity, as: :string, label: false,
        input_html: { class: 'form-control quantity-input' }
    %div.input-link.quantity-plus +

- else
  %span.ml-30= order_item.quantity
